package connection;

import java.sql.Connection;
import java.sql.DriverManager;

public class DBConnection {

	static String bd = "libreria_udemy";
	static String port = "3306";
	static String login = "root";
	static String password = "pass";
	static String url = "jdbc:mysql://localhost:"+port+"/"+bd;
	
	Connection connection = null;
	
	public DBConnection() {
		try {
			Class.forName("org.mariadb.jdbc.Driver");
			connection = getConnection(url,login,password);
			
			if(connection == null) {System.out.println("La conexión a "+bd+" ha fallado");}
			else {System.out.println("La conexión a "+bd+" ha sido un éxito");}
		}
		catch(Exception ex) {
			System.out.println(ex.getMessage());
		}
	}
	
	public Connection getConnection(String url, String login, String password) {
		return connection;
	}
	
	public void desconectar() {
		connection = null;
	}
}
